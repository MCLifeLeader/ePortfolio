        form.pasta.value = pasta1 + pasta4;
        form.grain.value = wheat1 + wheat4 + flour1 + flour4 + cornmeal1 + cornmeal4 + oats1 + oats4 + rice1 + rice4 + pasta1 + pasta4;
        form.beans.value = beans1 + beans4;
        form.lima.value = lima1 + lima4;
        form.soy.value = soy1 + soy4;
        form.split.value = split1 + split4;
        form.lentils.value = lentils1 + lentils4;
        form.drysoup.value = drysoup1 + drysoup4;
        form.legumes.value = beans1 + beans4 + lima1 + lima4 + soy1 + soy4 + + split1 + split4 + lentils1 + lentils4 + drysoup1 + drysoup4;
