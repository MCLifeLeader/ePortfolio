        form.shortening.value = shortening1 + shortening4;
        form.mayo.value = mayo1 + mayo4;
        form.dressing.value = dressing1 + dressing4;
        form.peanut.value = peanut1 + peanut4;
        form.fats.value = ((oil1 + oil4) * 7) + shortening1 + shortening4 + peanut1 + peanut4 + ((mayo1 + mayo4) * 1) + ((dressing1 + dressing4) * 1);
